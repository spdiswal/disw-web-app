// Read more:
// https://www.typescriptlang.org/tsconfig
//
// Don't forget to update the TypeScript section in the README.
//
{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            // The alias below lets the type checker rely on a dummy profile.
            "+content": [ "main/content/perseverance-dummy" ],
            //
            "+elements": [ "main/elements/index" ],
            "+i18n": [ "main/i18n/index" ],
            "+profile": [ "main/profile/index" ],
            "+theme": [ "main/theme/index" ],
            "+types": [ "main/types/index" ],
            "+test/fakes": [ "test/fakes/index" ]
        },
        "target": "ES2017",
        "module": "ES2020",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "useDefineForClassFields": true,
        "lib": [ "DOM", "DOM.Iterable", "ES2017" ],
        "importHelpers": true,
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "noEmit": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [ "**/*.ts", "**/*.tsx" ],
    "exclude": [ ".yarn", "build", "node_modules" ]
}
